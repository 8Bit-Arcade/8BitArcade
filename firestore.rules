rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - read public, write own (limited fields)
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId)
                    && !request.resource.data.diff(resource.data).affectedKeys()
                       .hasAny(['isBanned', 'flags', 'totalScore', 'totalGamesPlayed']);
      allow delete: if false;
    }

    // Games collection - read only (admin managed via Functions)
    match /games/{gameId} {
      allow read: if true;
      allow write: if false;
    }

    // Sessions collection - read own only, write via Functions
    match /sessions/{sessionId} {
      allow read: if isAuthenticated()
                  && resource.data.player == request.auth.uid;
      allow write: if false; // Created via Cloud Functions only
    }

    // Scores collection - read public, write via Functions
    match /scores/{odedId} {
      allow read: if true;
      allow write: if false; // Updated via Cloud Functions only
    }

    // Leaderboards collection - read public, write via Functions
    match /leaderboards/{gameId} {
      allow read: if true;
      allow write: if false; // Updated via Cloud Functions only
    }

    // Global leaderboard - read public
    match /globalLeaderboard/{period} {
      allow read: if true;
      allow write: if false;
    }

    // Tournaments collection - read public, write via Functions
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if false; // Admin only via Functions
    }

    // Rewards collection - read own only
    match /rewards/{odedId} {
      allow read: if isOwner(odedId);
      allow write: if false; // Updated via Cloud Functions only
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
